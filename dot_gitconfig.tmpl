[user]
{{- if contains .chezmoi.hostname "msgn" }}
  email = jboeckel@mailbox.org
{{- else }}
  email = jonathan.boeckel@msg.group
{{- end }}
  name = Jonathan Boeckel
  signingkey = ~/.ssh/id_ed25519

[gpg]
  format = ssh

[init]
  defaultBranch = main

[color]
  ui = true

[commit]
  gpgSign = true

[diff]
  tool = nvimdiff

[rerere]
  enabled = true

[merge]
  tool = nvimdiff

[push]
  autoSetupRemote = true

[difftool]
  prompt = false

[core]
  autocrlf = false
  excludesFile = ~/.gitignore

[log]
  decorate      = true
  showSignature = false
  abbrevCommit  = true

[alias]
  p  = push
  a  = add
  aa = add --all
  c  = commit
  f  = fetch
  pl  = pull
  st = status

[http]
  sslVerify = false

[credential "https://codeberg.org"]
  provider = generic

[credential]
  helper = cache

