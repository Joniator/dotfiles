#!/usr/bin/env zsh

if [ "$(id -u)" -eq 0 ]; then
    SUDO=""
else
    if ! command -v sudo &> /dev/null; then
        echo "Error: sudo is not installed. Please install sudo or run as root."
        exit 1
    fi
    SUDO="sudo"
fi

$SUDO apt-get install -y unzip zip jq software-properties-common build-essential tar fzf ripgrep bat

